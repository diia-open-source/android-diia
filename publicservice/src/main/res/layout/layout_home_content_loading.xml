<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ua.gov.diia.ui_base.views.DiiaProgressCV
        android:id="@+id/diiaProgressCV"
        android:layout_width="0dp"
        android:layout_height="7dp"
        app:cornersRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/LineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_loading"
        android:layout_marginStart="@dimen/xlarge"
        android:layout_marginTop="@dimen/large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diiaProgressCV" />

</androidx.constraintlayout.widget.ConstraintLayout>